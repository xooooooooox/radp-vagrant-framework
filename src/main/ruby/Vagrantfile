# -*- mode: ruby -*-
# vi: set ft=ruby :

# RADP Vagrant Framework - Entry Point
# This file loads the main configuration module and delegates to RadpVagrant

require_relative 'lib/radp_vagrant'

Vagrant.require_version '>=1.6.0'

Vagrant.configure('2') do |vagrant_config|
  # Determine configuration directory
  # Priority: ENV['RADP_VAGRANT_CONFIG_DIR'] > default path
  cur_dir = File.dirname(File.expand_path(__FILE__))
  default_config_dir = File.join(cur_dir, 'config')
  config_dir = ENV['RADP_VAGRANT_CONFIG_DIR'] || default_config_dir

  # Run the RADP Vagrant configuration
  RadpVagrant.configure(vagrant_config, config_dir)
end
