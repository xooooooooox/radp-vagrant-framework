# -*- mode: ruby -*-
# vi: set ft=ruby :

# RADP Vagrant Framework - Entry Point
# This file loads the main configuration module and delegates to RadpVagrant

require_relative 'lib/radp_vagrant'

Vagrant.require_version '>=2.0.0'

Vagrant.configure('2') do |vagrant_config|
  # Determine configuration file path
  # Priority: ENV['RADP_VAGRANT_CONFIG'] > default path
  cur_dir = File.dirname(File.expand_path(__FILE__))
  default_config_path = File.join(cur_dir, 'config', 'vagrant.yaml')
  config_path = ENV['RADP_VAGRANT_CONFIG'] || default_config_path

  # Run the RADP Vagrant configuration
  RadpVagrant.configure(vagrant_config, config_path)
end
